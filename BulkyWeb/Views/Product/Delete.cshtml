@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Title</label>
            <input asp-for="Title" type="text" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input asp-for="ISBN" disabled class="form-control" />
            
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" 
                class="btn border btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>

 